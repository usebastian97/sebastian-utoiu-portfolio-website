---
import logoStar from '../assets/logo-star.svg'
import { author } from '../sample'

const socials = [
  { icon: 'ri-linkedin-fill', link: author.linkedin, color: 'text-blue-600' },
  { icon: 'ri-github-fill', link: author.github, color: 'text-gray-800' },
  { icon: 'ri-twitter-x-line', link: author.x, color: 'text-gray-800' },
]

---

<footer class="border-t-4 px-5 md:px-0 py-10 mt-30">
    <div class="max-w-3xl mx-auto flex justify-center flex-col gap-5 md:gap-0 md:grid md:grid-cols-3 items-center">
      <div class="flex-1 font-bold">
        <a href={import.meta.env.BASE_URL} class="flex items-center gap-3 text-xl">
            <img src={logoStar.src} alt="logo" width="30" /> {author.nickname}
        </a>
      </div>
      <div class="text-center">
        <p>Â© {new Date().getFullYear()} {author.nickname}. All rights reserved.</p>
      </div>
      <div class="flex md:justify-end gap-3">
        {socials.map(item => (
          <a href={item.link} target="_blank" class="w-10 h-10 bg-white border-2 border-black flex items-center justify-center transition-all duration-200 hover:shadow-[2px_2px_0px_rgba(0,0,0,0.3)] hover:-translate-y-0.5">
            <i class={`${item.icon} text-xl ${item.color}`}></i>
          </a>
        ))}
      </div>
    </div>
   </footer>