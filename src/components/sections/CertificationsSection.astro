---
import { certifications } from '../../data/portfolio';
import svgRedStar from '../../assets/red-star.svg';
---

<!-- Certifications Section -->
<section id="certifications" class="py-20 relative overflow-hidden">
    
    <div class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-15">
            <h2 class="text-[clamp(1.8rem,5vw,2.5rem)] font-bold mb-6">Certifications</h2>
            <p class="text-[clamp(0.9rem,3.8vw,1.1rem)] max-w-[38ch] mx-auto mb-10">All my current certifications.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {certifications.map((cert, index) => (
                <button
                    class="bg-white p-5 border-2 border-black transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)] cursor-pointer text-left w-full"
                    onclick={`openCertModal(${index})`}
                >
                    <div>
                        <h3 class="font-bold text-lg">{cert.name}</h3>
                        <p class="text-sm">{cert.issuer} â€¢ {cert.date}</p>
                        <p class="text-xs text-gray-600 mt-1">Click for details</p>
                    </div>
                </button>
            ))}
        </div>
    </div>
</section>
