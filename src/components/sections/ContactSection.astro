---
// Contact Section Component
---

<!-- Contact Section -->
<section id="contact" class="py-20 relative overflow-hidden">
    <div class="max-w-3xl mx-auto px-4">
        <div class="border-3 border-black bg-white p-6 relative">
            <!-- Corner boxes -->
            <div class="size-3 bg-white border-2 border-black absolute -top-2 -right-2"></div>
            <div class="size-3 bg-white border-2 border-black absolute -top-2 -left-2"></div>
            <div class="size-3 bg-white border-2 border-black absolute -bottom-2 -left-2"></div>
            <div class="size-3 bg-white border-2 border-black absolute -bottom-2 -right-2"></div>

            <div class="text-center">
                <h2 class="text-[clamp(1.8rem,5vw,2.5rem)] font-bold mb-4">Get My CV</h2>
                <p class="text-[clamp(0.9rem,3.8vw,1.1rem)] max-w-[38ch] mx-auto mb-6">Download my CV to learn more about my experience, skills, and cloud architecture journey.</p>

                <a href={`${import.meta.env.BASE_URL}Sebastian_Utoiu_CV_EN.pdf`} download="Sebastian_Utoiu_CV_EN.pdf" class="inline-block bg-black text-white px-8 py-3 font-medium border-2 border-black transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)]">
                    Download CV
                </a>
            </div>
        </div>
    </div>
</section>
